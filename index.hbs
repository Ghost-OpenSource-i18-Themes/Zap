{{!< default}}

<ul style="display:flex;flex-direction:column-reverse">
{{#foreach posts}}

    <li>
        #{{@number}}
        <i>
            <time datetime="{{date format="YYYY-MM-DD"}}" pubdate>
                - {{date format="D MMM, YYYY"}} -
            </time>
        </i>
        <a href="{{url}}">{{title}}</a>
    </li>

{{/foreach}}
</ul>